 @model CheeseMvc.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese @Model.Name (id= @Model.CheeseId)</h1>

<form method="post">
    <input type="hidden" value="@Model.CheeseId" name="id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" style="color:red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" style="color:red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select class="form-control" asp-for="Type" asp-items="Model.CheeseTypes"></select>
        <span asp-validation-for="Type" style="color:red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" />
        <span asp-validation-for="Rating" style="color:red;"></span>
    </div>
    <input type="submit" value="Edit Cheese" />
</form>
